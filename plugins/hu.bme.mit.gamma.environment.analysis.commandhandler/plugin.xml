<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.ui.commands">
    <command id="hu.bme.mit.gamma.environment.analysis.transformation" name="Gamma Analysis Transformation"/>
  </extension>
  <extension point="org.eclipse.ui.menus">
    <menuContribution allPopups="false" locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
       <menu id="gammaProjectMenu"
             label="Gamma Commands"
             icon="icons/gamma-icon-16.png">
     	<!-- Generate Stochastic Gamma code -->	
       <command commandId="hu.bme.mit.gamma.environment.analysis.transformation"
              label="Analysis Transformation"
              style="push">
           <visibleWhen
                 checkEnabled="false">
              <iterate
                    ifEmpty="false"
                    operator="or">
                 <test
                       property="org.eclipse.core.resources.name"
                       value="*.sgcd">
                 </test>
              </iterate>
           </visibleWhen>
        </command>
     </menu>
    </menuContribution>
    <menuContribution allPopups="false" locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
      <menu id="gammaPackageMenu"
            icon="icons/gamma-icon-16.png"
            label="Gamma Commands">     
	   		<!-- Generate Stochastic Gamma code -->	
		    <command commandId="hu.bme.mit.gamma.environment.analysis.transformation" label="Stochastic Gamma" style="push">
		    	<visibleWhen checkEnabled="false">
	            	<iterate ifEmpty="false" operator="or">
						<test
					    	property="org.eclipse.core.resources.name"
					        value="*.sgcd">
					    </test>
	    			</iterate>
	            </visibleWhen>
		    </command>
      </menu>
    </menuContribution>
  </extension>
  <extension point="org.eclipse.ui.handlers"> 
  	<handler class="hu.bme.mit.gamma.environment.analysis.commandhandler.AnalysisTransformationHandler" commandId="hu.bme.mit.gamma.environment.analysis.transformation"/>
  </extension>
</plugin>
