<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.ui.menus">
    <menuContribution allPopups="false" locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
       <menu id="gammaProjectMenu"
             label="Gamma Commands"
             icon="icons/gamma-icon-16.png">
        <!-- Generating Gamma artifacts -->	    
	    <command commandId="hu.bme.mit.gamma.analysis.transformation" label="Run Transformation" style="push">
	    	<visibleWhen checkEnabled="false">
            	<iterate ifEmpty="false" operator="or">
					<test
				    	property="org.eclipse.core.resources.name"
				        value="*.sgcd">
				    </test>
    			</iterate>
            </visibleWhen>  
	    </command> 
	    <command commandId="hu.bme.mit.gamma.analysis.run" label="Run Analysis" style="push">
	    	<visibleWhen checkEnabled="false">
            	<iterate ifEmpty="false" operator="or">
					<test
				    	property="org.eclipse.core.resources.name"
				        value="*.sgcd">
				    </test>
    			</iterate>
            </visibleWhen>  
	    </command>
      </menu>
    </menuContribution>
    <menuContribution allPopups="false" locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
      <menu id="gammaPackageMenu"
            label="Gamma Commands"
             icon="icons/gamma-icon-16.png">
        <!-- Generating Gamma artefacts -->	    
	    <command commandId="hu.bme.mit.gamma.analysis.transformation" label="Run Transformation" style="push">
	    	<visibleWhen checkEnabled="false">
            	<iterate ifEmpty="false" operator="or">
					<test
				    	property="org.eclipse.core.resources.name"
				        value="*.sgcd">
				    </test>
    			</iterate>
            </visibleWhen>  
	    </command>  
	    <command commandId="hu.bme.mit.gamma.analysis.run" label="Run Analysis" style="push">
	    	<visibleWhen checkEnabled="false">
            	<iterate ifEmpty="false" operator="or">
					<test
				    	property="org.eclipse.core.resources.name"
				        value="*.sgcd">
				    </test>
    			</iterate>
            </visibleWhen>  
	    </command>
      </menu>
    </menuContribution>
  </extension>
  <extension point="org.eclipse.ui.handlers"> 
    <handler class="hu.bme.mit.gamma.analysis.commandhandler.TransformationCommandHandler" commandId="hu.bme.mit.gamma.analysis.transformation"/>
    <handler class="hu.bme.mit.gamma.analysis.commandhandler.AnalysisCommandHandler" commandId="hu.bme.mit.gamma.analysis.run"/>
  </extension>
</plugin>
